<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- false inner shape-->
    <item android:state_pressed="false">
        <shape
            android:shape="oval">
            <solid
                android:color="#2b79c6"/>
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="#aecbe7"/>
        </shape>
    </item>
    <!--true inner shape-->
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid
                android:color="#aecbe7"/>
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="#2b79c6"/>
        </shape>
    </item>


</selector>
